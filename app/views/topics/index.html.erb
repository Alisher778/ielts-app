

<h1 align="center">Listing Topics</h1><br><br>

    <% @topics.each do |topic| %>
    <div class="row">
    <div class="col-md-12">
    <div class="panel panel-default" align="center">
    <table class="table">
      <tr>
        <th id="user-info" style="width: 20%"><%= image_tag topic.user.photo.url(:small), class: "img-circle" %><%= link_to topic.user.first_name, users_path(@user) %></th>
        <th style="width: 60%">
          <h4 style="margin-left: 40px; text-align: left"><%= link_to topic.name, topic_path(topic), style: "padding: 0px" %></h4>
        </th>
        <th style="width: 10%; text-align: center">Comments
          <p> <%= topic.posts.count%></p>
        </th>
        <% if current_user.admin?%>
        <th>
          <div class="dropdown">
             <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Options
              <span class="caret"></span>
             </button>
              <ul class="dropdown-menu"> 
              <li><%= link_to 'Show', topic %></li>
              <li><%= link_to 'Edit', edit_topic_path(topic) %></li>
              <li><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </th>
        <% end %>
        </tr>
    </table>
    </div>
  </div>
  </div>

    <% end %>
    
<br>

<%= link_to 'New Topic', new_topic_path, class: "btn btn-success btn-md" %>
